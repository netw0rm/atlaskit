{
  "tags": {
    "allowUnknownTags": true
  },
  "source": {
    "include": ["packages/ak-pony-button/src"],
    "includePattern": ".+\\.js(doc|x)?$"
  },
  "plugins": [
    "plugins/markdown"
  ],
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false,
    "default": {
      "outputSourceFiles": true,
      "includeDate": false
    }
  }
}
