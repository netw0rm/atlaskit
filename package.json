{
  "name": "atlaskit-spike",
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "./node_modules/.bin/lerna exec -- rm -rf node_modules dist && rm -rf node_modules",
    "dist": "./node_modules/.bin/lerna run prepublish",
    "dev-server/single": "./build/bin/dev.server.single.sh",
    "lint": "eslint .",
    "postinstall": "./node_modules/.bin/lerna bootstrap && validate-commit-msg",
    "prepublish/single": "./build/bin/prepublish.single.sh",
    "release": "lerna run pre-release --concurrency 1 && lerna-semantic-release perform",
    "release/changelog": "[ -s .released-packages ] && lerna run post-release && ./build/bin/push-changelogs.sh",
    "release/announce": "[ -s .released-packages ] && cat .released-packages | sed 's/^/Released /' | xargs ./build/bin/hipchat_message.sh || return 0",
    "test": "./build/bin/test.sh",
    "test/saucelabs": "./build/bin/test.saucelabs.sh",
    "test/saucelabs/ci": "./build/bin/test.saucelabs.ci.sh",
    "test/single": "./build/bin/test.single.sh",
    "test/single/watch": "./build/bin/test.single.watch.sh",
    "test/single/saucelabs": "./build/bin/test.single.saucelabs.sh",
    "validate": "npm ls",
    "webpack/single": "./build/bin/webpack.single.sh"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "babel-core": "^6.9.0",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "camelcase": "^3.0.0",
    "css-loader": "^0.23.1",
    "cz-conventional-changelog": "^1.1.6",
    "cz-lerna-changelog": "0.1.1",
    "eslint": "^2.10.2",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-plugin-import": "^1.8.0",
    "eslint-plugin-jsx-a11y": "^1.2.0",
    "eslint-plugin-mocha": "^2.2.0",
    "eslint-plugin-react": "^5.1.1",
    "karma": "^0.13.22",
    "karma-chai-plugins": "^0.7.0",
    "karma-chrome-launcher": "^1.0.1",
    "karma-firefox-launcher": "^1.0.0",
    "karma-mocha": "^1.0.1",
    "karma-sauce-launcher": "1.0.0",
    "karma-webpack": "^1.7.0",
    "lerna": "jpnelson/lerna#config-concurrency-committed-lib-with-exec",
    "lerna-semantic-release": "0.4.6",
    "less": "^2.7.1",
    "less-loader": "^2.2.3",
    "mocha": "^2.4.5",
    "precommit-hook": "^3.0.0",
    "raw-loader": "^0.5.1",
    "semantic-release": "6.2.2",
    "style-loader": "^0.13.1",
    "validate-commit-message": "^3.0.1",
    "webpack": "^1.13.0",
    "webpack-dev-server": "^1.14.1"
  },
  "repository": "git@bitbucket.org:atlassian/atlaskit-spike.git",
  "private": true,
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "engines": {
    "npm" : ">=3.8",
    "node": ">=6.1"
  },
  "os" : [ "!win32" ],
  "pre-commit": [
    "lint"
  ]
}
