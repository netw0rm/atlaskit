{
  "compilerOptions": {
    "allowJs": false,
    "experimentalDecorators": true,
    "importHelpers": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es5",
    "types": [
      "chai",
      "mocha",
      "react",
      "sinon",
      "enzyme"
    ]
  },
  // Include source files for IDE and tslint detection.
  // Package-specific build and webpack configs overrides these settings to
  // more granular scoping.
  "include": [
    "packages/*/*.ts",
    "packages/*/build/**/*.ts",
    "packages/*/src/**/*.ts",
    "packages/*/src/**/*.tsx",
    "packages/*/test/**/*.ts",
    "packages/*/test/**/*.tsx",
    "packages/*/stories/**/*.ts",
    "packages/*/stories/**/*.tsx"
  ],
  "files": [
    "build/types/png.d.ts",
    "build/types/styles.d.ts",
    "build/types/node.d.ts",
    "build/types/popper.d.ts",
    "build/types/raw-loader.d.ts"
  ]
}
