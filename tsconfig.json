{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es2015",
    "types": [
      "chai",
      "react",
      "sinon",
      "sinon-chai",
      "chai-enzyme",
      "enzyme"
    ]
  },
  // Include source files for IDE and tslint detection.
  // Package-specific build and webpack configs overrides these settings to
  // more granular scoping.
  "include": [
    "packages/*/*.ts",
    "packages/*/build/**/*.ts",
    "packages/*/src/**/*.ts",
    "packages/*/src/**/*.tsx",
    "packages/*/test/**/*.ts",
    "packages/*/test/**/*.tsx",
    "packages/*/stories/**/*.ts",
    "packages/*/stories/**/*.tsx"
  ],
  "files": [
    "build/types/node.d.ts",
    "build/types/popper.d.ts",
    "build/types/shadow-dom.d.ts"
  ]
}
