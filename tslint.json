{
  "rulesDirectory": ["build/tslint-rules"],
  "extends": ["tslint:latest", "tslint-react"],
  "rules": {
    "array-type": [],
    "arrow-parens": false,
    "callable-types": false,
    "class-name": true,
    "curly": true,
    "eofline": true,
    "forin": false,
    "import-spacing": true,
    "indent": [
      true,
      "spaces"
    ],
    "interface-name": [],
    "interface-over-type-literal": false,
    "jsx-alignment": true,
    "jsx-no-lambda": [],
    "jsx-no-multiline-js": [],
    "jsx-no-string-ref": [],
    "jsx-wrap-multiline": [],
    "max-classes-per-file": [],
    "max-line-length": [],
    "member-access": [],
    "member-ordering": [],
    "new-parens": true,
    "no-conditional-assignment": false,
    "no-consecutive-blank-lines": [true, 2],
    "no-empty": false,
    "no-reference": false,
    "no-shadowed-variable": false,
    "no-string-literal": false,
    "no-trailing-whitespace": true,
    "no-unused-expression": false,
    "no-unused-new": false,
    "object-literal-key-quotes": [],
    "object-literal-shorthand": false,
    "object-literal-sort-keys": false,
    "one-line": [],
    "only-arrow-functions": [],
    "ordered-imports": [true],
    "prefer-for-of": false,
    "semicolon": [true],
    "switch-default": false,
    "typedef": [true],
    "trailing-comma": [],
    "triple-equals": true,
    "variable-name": true,
    "no-namespace": [true, "allow-declarations"],
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ],
    "whitespace": [true, "check-branch", "check-decl", "check-operator", "check-module", "check-separator", "check-type", "check-typecast"],

    // Custom Rules
    "no-only-tests": true // Prohibits commiting test with "only", e.g.: describe.only, it.only
  },
  "jsRules": {
    // We use eslint for .js and .jsx, so all the TSLint rules can be disabled.
    "array-type": [],
    "arrow-parens": false,
    "curly": false,
    "eofline": false,
    "forin": false,
    "indent": [],
    "interface-name": [],
    "jsx-alignment": false,
    "jsx-no-lambda": [],
    "jsx-no-multiline-js": [],
    "jsx-no-string-ref": [],
    "jsx-wrap-multiline": [],
    "max-classes-per-file": [],
    "max-line-length": [],
    "member-access": [],
    "member-ordering": [],
    "new-parens": false,
    "no-conditional-assignment": false,
    "no-consecutive-blank-lines": [],
    "no-empty": false,
    "no-reference": false,
    "no-shadowed-variable": false,
    "no-string-literal": false,
    "no-trailing-whitespace": false,
    "no-unused-expression": false,
    "no-unused-new": false,
    "object-literal-key-quotes": [],
    "object-literal-shorthand": false,
    "object-literal-sort-keys": false,
    "one-line": [],
    "only-arrow-functions": [],
    "ordered-imports": [],
    "prefer-for-of": false,
    "semicolon": [],
    "switch-default": false,
    "typedef": [],
    "trailing-comma": [],
    "triple-equals": false,
    "variable-name": false,
    "quotemark": [],
    "whitespace": []
  }
}
